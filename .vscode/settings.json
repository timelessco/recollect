{
	// Quality of life improvements
	// Git
	"git.branchProtection": ["main"],
	"githubPullRequests.ignoredPullRequestBranches": ["main"],
	"typescript.tsdk": "node_modules/typescript/lib",

	// Files Customization
	"files.associations": {
		"*.svg": "html",
		".env.*": "dotenv",
		"*.json": "jsonc",
		"package.json": "json",
		".all-contributorsrc": "json",
		"*.tsx": "typescriptreact",
		"*.jsx": "javascriptreact"
	},

	// Editor Formatters & Linters.
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"source.addMissingImports": "explicit",
		"source.formatDocument": "explicit",
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "explicit",
		"source.fixAll.markdownlint": "explicit"
	},

	// Language based settings

	// CSS
	"css.validate": false,
	"css.lint.unknownAtRules": "ignore",

	// JavaScript
	"javascript.updateImportsOnFileMove.enabled": "always",
	"javascript.referencesCodeLens.enabled": true,
	"javascript.referencesCodeLens.showOnAllFunctions": true,

	// TypeScript
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.referencesCodeLens.enabled": true,
	"typescript.tsserver.experimental.useVsCodeWatcher": true,
	"typescript.referencesCodeLens.showOnAllFunctions": true,

	// Markdown
	"[markdown]": {
		"editor.quickSuggestions": {
			"comments": "on",
			"strings": "on",
			"other": "on"
		}
	},

	// Must have extensions config

	// Linters & Formatters
	"eslint.useESLintClass": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"json",
		"jsonc",
		"json5",
		"yaml",
		"yml"
	],

	// Tailwind CSS
	// Detect additional class regex
	"tailwindCSS.experimental.classRegex": [
		// For const/let/var string assignments like: const baseClasses = "tw-..."
		"(?:const|let|var)\\s+\\w+\\s*=\\s*[\"'`]([^\"'`]*)[\"'`]"
	],
	// Enable features in languages that are not supported by default. Add a mapping here between the new language and an already supported language.
	"tailwindCSS.includeLanguages": {
		"plaintext": "html",
		"typescript": "javascript",
		"typescriptreact": "javascript",
		"javascriptreact": "javascript"
	},
	"tailwindCSS.classFunctions": ["cva", "tcx"]
}
