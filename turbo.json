{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build:next": {
			"env": [
				"NODE_ENV",
				"VERCEL_ENV",
				"SUPABASE_SERVICE_KEY",
				"SUPABASE_JWT_SECRET_KEY",
				"SENTRY_DSN",
				"DEV_SUPABASE_JWT_SECRET_KEY",
				"DEV_SUPABASE_SERVICE_KEY",
				"UMAMI_SRC",
				"UMAMI_ID",
				"GOOGLE_GEMINI_TOKEN",
				"RESEND_KEY"
			],
			"inputs": ["$TURBO_DEFAULT$", ".env", ".env.local"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"test": {},
		"lint:types": {
			"inputs": ["**/*.{ts,tsx,d.ts,cts,d.cts,mts,d.mts}"],
			"outputs": ["*.tsbuildinfo"]
		},
		"lint:eslint": {
			"outputs": [".eslintcache"]
		},
		"lint:prettier": {
			"outputs": [".prettiercache"]
		},
		"lint:css": {
			"inputs": ["**/*.css"],
			"outputs": [".stylelintcache"]
		},
		"lint:md": {
			"inputs": ["**/*.md", ".github/**/*.md"]
		},
		"lint:spelling": {
			"outputs": [".cspellcache"]
		},
		"lint:package-json": {
			"inputs": ["package.json"]
		},
		"fix:md": {
			"inputs": ["**/*.md", ".github/**/*.md"]
		},
		"fix:css": {
			"inputs": ["**/*.css"],
			"outputs": [".stylelintcache"]
		},
		"fix:spelling": {
			"outputs": [".cspellcache"]
		},
		"fix:prettier": {
			"dependsOn": ["fix:md", "fix:css", "fix:spelling"],
			"outputs": [".prettiercache"]
		},
		"fix:eslint": {
			"dependsOn": ["fix:prettier"],
			"outputs": [".eslintcache"]
		}
	}
}
