{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build:next": {
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"test": {},
		"lint:types": {
			"inputs": ["**/*.{ts,tsx,d.ts,cts,d.cts,mts,d.mts}"],
			"outputs": ["*.tsbuildinfo"]
		},
		"lint:eslint": {
			"outputs": [".eslintcache"]
		},
		"lint:prettier": {
			"outputs": [".prettiercache"]
		},
		"lint:css": {
			"inputs": ["**/*.css"],
			"outputs": [".stylelintcache"]
		},
		"lint:md": {
			"inputs": ["**/*.md", ".github/**/*.md"]
		},
		"lint:spelling": {
			"outputs": [".cspellcache"]
		},
		"lint:package-json": {
			"inputs": ["package.json"]
		},
		"fix:md": {
			"inputs": ["**/*.md", ".github/**/*.md"]
		},
		"fix:css": {
			"inputs": ["**/*.css"],
			"outputs": [".stylelintcache"]
		},
		"fix:prettier": {
			"dependsOn": ["fix:md", "fix:css"],
			"outputs": [".prettiercache"]
		},
		"fix:eslint": {
			"dependsOn": ["fix:prettier"],
			"outputs": [".eslintcache"]
		}
	}
}
