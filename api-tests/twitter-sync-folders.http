POST {{$dotenv API_BASE_URL}}/v1/twitter/syncFolders
Authorization: Bearer {{$dotenv USER_TOKEN}}
Content-Type: application/json

{
  "categories": [
    {
      "name": "Duplicate Test"
    }
  ]
}

